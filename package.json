{
  "name": "character-counter",
  "version": "1.0.2",
  "main": "dist/main.js",
  "scripts": {
    "start": "electron .",
    "dev:webpack": "cross-env NODE_ENV=development webpack --watch --progress",
    "dev:electron": "wait-on dist/main.js && electronmon .",
    "dev": "npm-run-all -p dev:webpack dev:electron",
    "build:webpack": "cross-env NODE_ENV=production webpack --progress",
    "clean": "rimraf release",
    "build:exe": "electron-builder",
    "build": "npm run clean && npm run build:webpack && npm run build:exe",
    "create-snapshot": "node scripts/create-snapshot.js",
    "copy-snapshot": "node scripts/copy-snapshot.js",
    "postinstall": "npm run create-snapshot && npm run copy-snapshot"
  },
  "keywords": [],
  "author": "molyashi",
  "electronmon": {
    "patterns": [
      "dist/**/*"
    ]
  },
  "license": "ISC",
  "description": "A simple character counter app.",
  "devDependencies": {
    "@types/encoding-japanese": "^2.2.1",
    "@types/node": "^24.0.10",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@types/react-router-dom": "^5.3.3",
    "cross-env": "^7.0.3",
    "css-loader": "^7.1.2",
    "electron": "^37.2.0",
    "electron-builder": "^26.0.12",
    "electronmon": "^2.0.3",
    "html-webpack-plugin": "^5.6.3",
    "mini-css-extract-plugin": "^2.9.2",
    "npm-run-all": "^4.1.5",
    "rimraf": "^6.0.1",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3",
    "wait-on": "^8.0.3",
    "webpack": "^5.99.9",
    "webpack-cli": "^6.0.1",
    "electron-link": "^0.3.0",
    "electron-mksnapshot": "^8.0.0"
  },
  "dependencies": {
    "encoding-japanese": "^2.2.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-router-dom": "^7.6.3"
  },
  "build": {
    "appId": "com.character-counter",
    "productName": "文字数カウンター",
    "files": [
      "dist/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "directories": {
      "output": "release"
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "assets/icon.png"
    },
    "nsis": {
      "artifactName": "CharacterCounter-Setup-${version}.${ext}",
      "oneClick": true,
      "allowToChangeInstallationDirectory": false
    },
    "portable": {
      "artifactName": "CharacterCounter-Portable-${version}.${ext}"
    }
  }
}
