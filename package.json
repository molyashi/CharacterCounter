  "name": "character-counter",
  "version": "1.1.1",
  "description": "A simple character counter app.",
  "main": "dist/main.js",
  "scripts": {
    "start": "electron .",
    "dev:webpack": "cross-env NODE_ENV=development webpack --watch --progress",
    "dev:electron": "wait-on dist/main.js && electronmon .",
    "dev": "npm-run-all -p dev:webpack dev:electron",
    "build:webpack": "cross-env NODE_ENV=production webpack --progress",
    "clean": "rimraf release",
    "build:exe": "electron-builder",
    "build": "npm run clean && npm run build:webpack && npm run build:exe",
    "build:win": "npm run clean && npm run build:webpack && electron-builder --win -c.publish.channel=latest-win",
    "build:mac": "npm run clean && npm run build:webpack && electron-builder --mac -c.publish.channel=latest-mac",
    "build:linux": "npm run clean && npm run build:webpack && electron-builder --linux -c.publish.channel=latest-linux"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/molyashi/CharacterCounter.git"
  },
  "keywords": [],
  "author": "molyashi <123541667+molyashi@users.noreply.github.com>",
  "license": "AGPL-3.0-or-later",
  "bugs": {
    "url": "https://github.com/molyashi/CharacterCounter/issues"
  },
  "homepage": "https://github.com/molyashi/CharacterCounter#readme",
  "devDependencies": {
    "@types/encoding-japanese": "^2.2.1",
    "@types/node": "^24.0.10",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@types/react-router-dom": "^5.3.3",
    "cross-env": "^7.0.3",
    "css-loader": "^7.1.2",
    "electron": "^37.2.0",
    "electron-builder": "^26.0.12",
    "electron-updater": "^6.6.2",
    "electronmon": "^2.0.3",
    "html-webpack-plugin": "^5.6.3",
    "mini-css-extract-plugin": "^2.9.2",
    "npm-run-all": "^4.1.5",
    "rimraf": "^6.0.1",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3",
    "wait-on": "^8.0.3",
    "webpack": "^5.99.9",
    "webpack-cli": "^6.0.1"
  },
  "dependencies": {
    "encoding-japanese": "^2.2.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-router-dom": "^7.6.3"
  },
  "build": {
    "appId": "com.molyashi.CharacterCounter",
    "productName": "文字数カウンター",
    "artifactName": "CharacterCounter-Setup-${version}-${arch}.${ext}",
    "files": [
      "dist/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "publish": {
      "provider": "github",
      "owner": "molyashi",
      "repo": "CharacterCounter",
      "channel": "latest"
    },
    "directories": {
      "output": "release"
    },
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "assets/icon.png"
    },
    "mac": {
      "target": [
        "dmg"
      ],
      "icon": "assets/icon.png",
      "category": "public.app-category.utilities"
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "artifactName": "CharacterCounter-${version}-${arch}.${ext}",
      "icon": "assets/icon.png",
      "category": "Utility"
    },
    "nsis": {
      "artifactName": "CharacterCounter-Setup-${version}-${arch}.${ext}",
      "oneClick": true,
      "allowToChangeInstallationDirectory": false
    },
    "portable": {
      "artifactName": "CharacterCounter-Portable-${version}-${arch}.${ext}"
    }
  }
}